{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Movie</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nazwafilmu</th>
                <td>{{ entity.nazwaFilmu }}</td>
            </tr>
            <tr>
                <th>Gatunekfilmu</th>
                <td>{{ entity.gatunekFilmu }}</td>
            </tr>
            <tr>
                <th>Opisfilmu</th>
                <td>{{ entity.opisFilmu }}</td>
            </tr>
            <tr>
                <th>Listaaktorow</th>
                <td>{{ entity.listaAktorow }}</td>
            </tr>
            <tr>
                <th>Okladka</th>
                <td><img src="{{ asset(entity.okladka.path) }}" style="height:250px"></td>
            </tr>
            <tr>
                <th>Cenafilmu</th>
                <td>{{ entity.cenaFilmu }}</td>
            </tr>
        </tbody>
    </table>

<ul class="record_actions">
{# SPRAWDZANEI PRAW, dla testow zrobione, że zwykłdy użytkonik może usunąc/edytować #}
{% if is_granted('ROLE_USER') %}
    <li>
        <a href="{{ path('_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
{% endif %} 
    <li>
        <a href="{{ path('') }}">
            Back to the list
        </a>
    </li>
    
</ul>

{% endblock %}
